{
  "_schema": "orgkernel:role_profile",
  "_version": "1.0",
  "role_id": "research_xo",
  "role_name": "Executive Officer â€” Research",
  "role_type": "executive",
  "chain_of_command": {
    "reports_to": "co",
    "authority_level": 2,
    "can_delegate": true
  },
  "capabilities": {
    "bst_domains": [
      "osint",
      "api_integration",
      "analysis",
      "data_transform"
    ],
    "htn_plans": [
      "api_integration",
      "log_investigation"
    ],
    "tools_primary": [
      "search_engine",
      "browser_agent",
      "code_execution_tool"
    ],
    "tools_secondary": [
      "memory_load",
      "memory_save",
      "response"
    ],
    "skills": []
  },
  "requirements": {
    "min_context_tokens": 6000,
    "preferred_model": null,
    "required_extensions": [
      "belief_state_tracker",
      "htn_plan_selector",
      "working_memory"
    ]
  },
  "pace_plan": {
    "primary": {
      "description": "Delegate research and analysis tasks to specialists and synthesize results",
      "action": "normal_execution"
    },
    "alternate": {
      "description": "Switch data sources or reassign to alternate specialist",
      "action": "fallback_chain",
      "trigger": "failures>=4"
    },
    "contingent": {
      "description": "Escalate to Commander with partial findings and blockers",
      "action": "escalate",
      "trigger": "failures>=6",
      "escalate_to": "co"
    },
    "emergency": {
      "description": "Abort research tasks and report full status to Commander",
      "action": "abort_and_report",
      "trigger": "critical_failure OR context_exhausted",
      "escalate_to": "co"
    }
  },
  "doctrine": {
    "salute_interval_turns": 7,
    "max_turns_without_progress": 15,
    "report_on_completion": true,
    "report_on_failure": true,
    "autonomous_retry_limit": 2
  }
}
