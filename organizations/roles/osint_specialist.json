{
  "_schema": "orgkernel:role_profile",
  "_version": "1.0",
  "role_id": "osint_specialist",
  "role_name": "OSINT Specialist",
  "role_type": "specialist",
  "chain_of_command": {
    "reports_to": "research_xo",
    "authority_level": 1,
    "can_delegate": false
  },
  "capabilities": {
    "bst_domains": [
      "osint",
      "api_integration"
    ],
    "htn_plans": [
      "api_integration"
    ],
    "tools_primary": [
      "search_engine",
      "browser_agent",
      "code_execution_tool"
    ],
    "tools_secondary": [
      "memory_load",
      "memory_save",
      "response"
    ],
    "skills": []
  },
  "requirements": {
    "min_context_tokens": 4000,
    "preferred_model": null,
    "required_extensions": [
      "belief_state_tracker",
      "htn_plan_selector",
      "working_memory"
    ]
  },
  "pace_plan": {
    "primary": {
      "description": "Conduct open-source intelligence gathering and API integrations",
      "action": "normal_execution"
    },
    "alternate": {
      "description": "Retry with alternate search engines or API endpoints",
      "action": "fallback_chain",
      "trigger": "failures>=3"
    },
    "contingent": {
      "description": "Escalate to Research XO with partial findings and access issues",
      "action": "escalate",
      "trigger": "failures>=5 OR context_fill>0.85",
      "escalate_to": "research_xo"
    },
    "emergency": {
      "description": "Abort task and report full status to Research XO",
      "action": "abort_and_report",
      "trigger": "critical_failure OR context_exhausted",
      "escalate_to": "research_xo"
    }
  },
  "doctrine": {
    "salute_interval_turns": 5,
    "max_turns_without_progress": 12,
    "report_on_completion": true,
    "report_on_failure": true,
    "autonomous_retry_limit": 2
  }
}
